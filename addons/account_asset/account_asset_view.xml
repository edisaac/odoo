<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

    <menuitem id="menu_finance_assets" name="Assets" parent="account.menu_finance" sequence="9"/>
    <menuitem id="menu_finance_config_assets" name="Assets" parent="account.menu_finance_configuration" sequence="25"/>

    <!--
        Asset Category
     -->

    <record model="ir.ui.view" id="view_account_asset_category_form">
        <field name="name">account.asset.category.form</field>
        <field name="model">account.asset.category</field>
        <field name="arch" type="xml">
            <form string="Asset category">
                <group>
                    <group>
                        <field name="name"/>
                        <field name="type"/>
                        <field name="parent_id" context="{'default_type':'view'}"/>
                        <field name="company_id" widget="selection" groups="base.group_multi_company"/>
                    </group>
                    <group attrs="{'invisible':[('type','=','view')]}">
                        <field name="journal_id"/>
                        <field name="account_asset_id" on_change="onchange_account_asset(account_asset_id)"/>
                        <field name="account_revaluation_id"/>
                        <field name="account_depreciation_id"/>
                        <field name="account_expense_depreciation_id"/>
                    </group>
                    <group string="Depreciation Dates" attrs="{'invisible':[('type','=','view')]}">
                        <field name="method_period"/>
                        <field name="open_asset"/>
                    </group>
                    <group string="Depreciation Method" attrs="{'invisible':[('type','=','view')]}">
                        <field name="method"/>
                        <field name="method_time"/>
                        <field name="method_progress_factor" attrs="{'invisible':[('method_time','!=','factor')], 'required':[('method_time','=','factor')]}"/>
                        <field name="method_number" attrs="{'invisible':[('method_time','!=','number')], 'required':[('method_time','=','number')]}"/>
                        <field name="method_end" attrs="{'required': [('method_time','=','end')], 'invisible':[('method_time','!=','end')]}"/>
                        <field name="method_activity" attrs="{'required': [('method_time','=','activity')], 'invisible':[('method_time','!=','activity')]}"/>
                        <field name="prorata"/>
                    </group>
                    <group groups="analytic.group_analytic_accounting" string="Analytic Information" attrs="{'invisible':[('type','=','view')]}">
                        <field name="account_analytic_id"/>
                    </group>
                </group>
                <separator string="Notes"/>
                <field name="note"/>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_account_asset_category_tree">
        <field name="name">account.asset.category.tree</field>
        <field name="model">account.asset.category</field>
        <field name="arch" type="xml">
            <tree string="Asset category" colors="blue:type=='view'">
                <field name="complete_name"/>
                <field name="journal_id"/>
                <field name="type"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="view_account_asset_category_search">
        <field name="name">account.asset.category.search</field>
        <field name="model">account.asset.category</field>
        <field name="arch" type="xml">
            <search string="Search Asset Category">
                <field name="name" string="Asset Category"/>
                <field name="journal_id"/>
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_account_asset_asset_list_normal">
        <field name="name">Asset Categories</field>
        <field name="res_model">account.asset.category</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem parent="menu_finance_config_assets" id="menu_action_account_asset_asset_list_normal" action="action_account_asset_asset_list_normal"/>

    <!--
        Asset
     -->

    <record model="ir.ui.view" id="view_account_asset_asset_form">
        <field name="name">account.asset.asset.form</field>
        <field name="model">account.asset.asset</field>
        <field name="arch" type="xml">
            <form string="Asset">
                <header>
                    <button name="validate" states="draft" string="Confirm Asset" type="object" class="oe_highlight"/>
                    <button name="set_to_close" states="open" string="Set to Close" type="object" class="oe_highlight"/>
                    <button name="set_to_draft" states="open,close" string="Set to Draft" type="object" />
                    <field name="state" widget="statusbar" statusbar_visible="draft,open"/>
                </header>
                <sheet>
                    <div class="oe_button_box oe_right">
                        <button class="oe_inline oe_stat_button" name="open_entries"  type="object" icon="fa-pencil">
                        <field string="Entries" name="entry_count" widget="statinfo" />
                    </button>
                    </div>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" class="oe_inline"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="category_id" on_change="onchange_category_id(category_id)"/>
                        </group>
                        <group>
                            <field name="purchase_date"/>
                        </group>
                    </group>
                    <notebook colspan="4">
                        <page string="General">
                            <group>
                                <group>
                                    <field name="purchase_value" widget="monetary" options="{'currency_field': 'currency_id'}" on_change="onchange_purchase_salvage_value(purchase_value, salvage_value)"/>
                                    <field name="salvage_value" widget="monetary" options="{'currency_field': 'currency_id'}" on_change="onchange_purchase_salvage_value(purchase_value, salvage_value)"/>
                                    <field name="value_residual" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                </group>
                                <group>
                                    <field name="method"/>
                                    <field name="method_custom" attrs="{'invisible':[('method','!=','custom')], 'required':[('method','=','custom')]}"/>
                                    <label for="method_time"/>
                                    <div>
                                        <field name="method_time" on_change="onchange_method_time(method_time)" class="oe_inline"/>
                                        <!--button name="%(action_asset_modify)d" states="open" string="Change Duration" type="action" icon="terp-stock_effects-object-colorize" class="oe_inline" colspan="1"/-->
                                    </div>
                                    <field name="method_number" attrs="{'invisible':[('method_time','!=','number')], 'required':[('method_time','=','number')]}"/>
                                    <field name="method_progress_factor" attrs="{'invisible':[('method_time','!=','factor')], 'required':[('method_time','=','factor')]}"/>
                                    <field name="method_end" attrs="{'required': [('method_time','=','end')], 'invisible':[('method_time','!=','end')]}"/>
                                    <field name="method_activity" attrs="{'required': [('method_time','=','activity')], 'invisible':[('method_time','!=','activity')]}"/>
                                    <field name="prorata"/>
                                    <field name="method_period"/>
                                </group>
                            </group>
                        </page>
                        <page string="Depreciation Board">
                            <field name="depreciation_line_ids" mode="tree" context="{'asset_line_default_create':1,'default_method_time':method_time,'default_asset_id':id,'default_method':method,'default_method_number':method_number,'default_method_period':method_period,'default_method_activity':method_activity,'default_method_progress_factor':method_progress_factor,'default_method_end':method_end,'default_salvage_value':salvage_value,'default_double_depreciation':double_depreciation,'default_double_depreciation_rate':double_depreciation_rate}">
                                <tree string="Depreciation Lines" colors="blue:(state=='draft');grey:(state=='cancel')">
                                    <field name="name"/>
                                    <field name="depreciation_date"/>
                                    <field name="sequence" invisible="1"/>
                                    <field name="amount"/>
                                    <field name="depreciated_value" readonly="1"/>
                                    <field name="remaining_value" readonly="1"/>
                                    <field name="state"/>
                                    <field name="parent_state" invisible="1"/>
                                    <button name="action_done" states="draft" icon="gtk-execute" string="Create Move" type="object"/>
                                    <button name="action_cancel" states="draft" icon="gtk-cancel" string="Cancel Move" type="object"/>
                                </tree>
                                <form string="Depreciation Lines">
                                    <header>
                                        <button name="action_draft" states="cancel" string="Draft" type="object"/>
                                        <button name="action_done" states="draft" string="Done" type="object" class="oe_highlight"/>
                                        <button name="action_cancel" states="draft,done" string="Cancel" type="object"/>
                                        <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
                                    </header>
                                    <sheet>
                                        <group name="depreciation_line_details">
                                            <group>
                                                <field name="period_id"/>
                                                <field name="amount"/>
                                            </group>
                                            <group>
                                                <field name="depreciation_date"/>
                                                <field name="depreciated_value"/>
                                                <field name="remaining_value"/>
                                                <field name="name"/>
                                                <field name="sequence"/>
                                                <field name="move_id" attrs="{'invisible':[('state','=','draft')]}"/>
                                                <field name="parent_state" invisible="1"/>
                                            </group>
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                            <button type="object" name="compute_depreciation_board" string="Compute"
                                    icon="terp-stock_format-scientific" colspan="2"
                                    attrs="{'invisible':['|',('state','in',('close','open')),('method_time','=','activity')]}"/>
                        </page>
                        <page string="History">
                            <field name="history_ids" readonly="0"/>
                        </page>
                        <page string="Accounting" attrs="{'invisible':[('valuation','=','manual')]}">
                            <group name="accounting_group">
                                <group>
                                    <field name="account_asset_id"/>
                                    <field name="account_revaluation_id"/>
                                    <field name="account_depreciation_id"/>
                                    <field name="account_expense_depreciation_id"/>
                                </group>
                                <group>
                                    <field name="journal_id"/>
                                </group>
                            </group>
                        </page>
                        <page string="Others">
                            <group>
                                <group>
                                    <field name="valuation"/>
                                    <field name="buy_date"/>

                                </group>
                                <group>
                                    <field name="code"/>
                                    <field name="parent_id"/>
                                    <field name="account_analytic_id" groups="analytic.group_analytic_accounting"/>
                                    <field name="currency_id" groups="base.group_multi_currency"/>
                                    <field name="company_id" widget="selection" groups="base.group_multi_company" on_change="onchange_company_id(company_id)"/>
                                </group>
                                <group>
                                    <field name="user_id"/>
                                    <field name="partner_id"/>
                                </group>
                            </group>
                            <separator string="Notes"/>
                            <field name="note" placeholder="Add an internal note here..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_account_asset_asset_tree">
        <field name="name">account.asset.asset.tree</field>
        <field name="model">account.asset.asset</field>
        <field name="arch" type="xml">
            <tree string="Assets" colors="blue:(state == 'draft');grey:(state == 'close')">
                <field name="name"/>
                <field name="category_id"/>
                <field name="purchase_date"/>
                <field name="user_id"/>
                <field name="partner_id"/>
                <field name="purchase_value"/>
                <field name="value_residual"/>
                <field name="currency_id" groups="base.group_multi_currency"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="view_account_asset_asset_calendar">
        <field name="name">account.asset.asset.calendar</field>
        <field name="model">account.asset.asset</field>
        <field name="arch" type="xml">
            <calendar string="Assets Calendar" date_start="purchase_date" color="user_id">
                <field name="name"/>
            </calendar>
        </field>
    </record>

    <record model="ir.ui.view" id="view_account_asset_asset_graph">
        <field name="name">account.asset.asset.graph</field>
        <field name="model">account.asset.asset</field>
        <field name="arch" type="xml">
            <graph string="Assets Graaph" type="pie">
                <field name="category_id"/>
                <field name="value_residual" type="measure"/>
            </graph>
        </field>
    </record>

    <record id="view_account_asset_search" model="ir.ui.view">
        <field name="name">account.asset.asset.search</field>
        <field name="model">account.asset.asset</field>
        <field name="arch" type="xml">
            <search string="Account Asset">
                <field name="name" string="Asset"/>
                <field name="purchase_date"/>
                <field name="category_id"/>
                <field name="partner_id" filter_domain="[('partner_id','child_of',self)]"/>
                <filter icon="terp-check" string="Current" domain="[('state','in', ('draft','open'))]" help="Assets in draft and open states"/>
                <filter icon="terp-dialog-close" string="Closed" domain="[('state','=', 'close')]" help="Assets in closed state"/>
                <filter string="My Assets" domain="[('user_id','=', uid)]"/>
                <group expand="0" string="Group By">
                    <filter name="analytic_group" string="Analytic" context="{'group_by':'account_analytic_id'}"/>
                    <filter name="category_group" string="Category" context="{'group_by':'category_id'}"/>
                    <filter name="parent_group" string="Parent Asset" context="{'group_by':'parent_id'}"/>
                    <filter name="user_group" string="Responsible" context="{'group_by':'user_id'}"/>
                    <filter name="partner_group" string="Partner" context="{'group_by':'partner_id'}"/>
                    <filter name="state_group" string="State" context="{'group_by':'state'}"/>
                    <filter name="purchase_date_group" string="Purchase Date" context="{'group_by':'purchase_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_account_asset_asset_form">
        <field name="name">Assets</field>
        <field name="res_model">account.asset.asset</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form,calendar,graph</field>
        <field name="view_id" ref="view_account_asset_asset_tree"/>
        <field name="search_view_id" ref="view_account_asset_search"/>
    </record>

    <menuitem parent="menu_finance_assets" id="menu_action_account_asset_asset_form" action="action_account_asset_asset_form"/>

    <record model="ir.ui.view" id="view_account_asset_asset_hierarchy_tree">
        <field name="name">account.asset.asset.hierarchy</field>
        <field name="model">account.asset.asset</field>
        <field name="field_parent">child_ids</field>
        <field name="arch" type="xml">
            <tree string="Assets">
                <field name="name"/>
                <field name="code"/>
                <field name="category_id"/>
                <field name="purchase_date"/>
                <field name="purchase_value"/>
                <field name="value_residual"/>
                <field name="currency_id" groups="base.group_multi_currency"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_account_asset_asset_tree">
        <field name="name">Asset Hierarchy</field>
        <field name="res_model">account.asset.asset</field>
        <field name="view_type">tree</field>
        <field name="domain">[('parent_id','=',False)]</field>
        <field name="view_id" ref="view_account_asset_asset_hierarchy_tree"/>
    </record>

    <menuitem parent="menu_finance_assets" id="menu_action_account_asset_asset_tree"
        sequence="100"
        action="action_account_asset_asset_tree"/>

    <!--
        Asset Depreciation Line
     -->

    <record model="ir.ui.view" id="view_account_asset_depreciation_line_tree">
        <field name="name">account.asset.depreciation.line.tree</field>
        <field name="model">account.asset.depreciation.line</field>
        <field name="arch" type="xml">
            <tree string="Depreciation Lines" colors="blue:(state=='draft');grey:(state=='cancel')">
                <field name="asset_id"/>
                <field name="name"/>
                <field name="depreciation_date"/>
                <field name="sequence" invisible="1"/>
                <field name="amount"/>
                <field name="depreciated_value" readonly="1"/>
                <field name="remaining_value" readonly="1"/>
                <field name="state"/>
                <field name="parent_state" invisible="1"/>
                <button name="action_done" states="draft" icon="gtk-execute" string="Create Move" type="object"/>
                <button name="action_cancel" states="draft" icon="gtk-cancel" string="Cancel Move" type="object"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="view_account_asset_depreciation_line_graph">
        <field name="name">account.asset.depreciation.line.graph</field>
        <field name="model">account.asset.depreciation.line</field>
        <field name="arch" type="xml">
            <graph string="Depreciation Lines" type="bar">
                <field name="depreciation_date"/>
                <field name="amount" operator="+"/>
            </graph>
        </field>
    </record>

    <record model="ir.ui.view" id="view_account_asset_depreciation_line_form">
        <field name="name">account.asset.depreciation.line.form</field>
        <field name="model">account.asset.depreciation.line</field>
        <field name="arch" type="xml">
            <form string="Depreciation Lines">
                <header>
                    <button name="action_draft" states="cancel" string="Draft" type="object"/>
                    <button name="action_done" states="draft" string="Done" type="object" class="oe_highlight"/>
                    <button name="action_cancel" states="draft,done" string="Cancel" type="object"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
                </header>
                <sheet>
                    <group name="depreciation_line_details">
                        <group>
                            <field name="asset_id"/>
                            <field name="period_id"/>
                            <field name="amount"/>
                        </group>
                        <group>
                            <field name="depreciation_date"/>
                            <field name="depreciated_value"/>
                            <field name="remaining_value"/>
                            <field name="name"/>
                            <field name="sequence"/>
                            <field name="move_id" attrs="{'invisible':[('state','=','draft')]}"/>
                            <field name="parent_state" invisible="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_account_asset_depreciation_line_search" model="ir.ui.view">
        <field name="name">account.asset.depreciation.line.search</field>
        <field name="model">account.asset.depreciation.line</field>
        <field name="arch" type="xml">
            <search string="Asset Depreciation Line">
                <field name="name" string="Depreciation Line"/>
                <filter icon="terp-check" string="Current" domain="[('state','in', ('draft','done'))]" help="Depreciation line in draft and done states"/>
                <filter icon="check" string="Draft" domain="[('state','=', 'draft')]" help="Depreciation line in draft state"/>
                <filter icon="terp-dialog-close" string="Cancel" domain="[('state','=', 'cancel')]" help="Depreciation line in cancel state"/>
                <separator string="Group By"/>
                <filter name="period_group" string="Period" context="{'group_by':'period_id'}"/>
                <filter name="asset_group" string="Asset" context="{'group_by':'asset_id'}"/>
                <filter name="state_group" string="State" context="{'group_by':'state'}"/>
                <filter name="date_group" string="Date" context="{'group_by':'depreciation_date'}"/>
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_account_asset_depreciation_form">
        <field name="name">Depreciation Lines</field>
        <field name="res_model">account.asset.depreciation.line</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form,graph</field>
    </record>

    <menuitem parent="menu_finance_assets" id="menu_action_account_asset_depreciation_form"
              action="action_account_asset_depreciation_form" sequence="200"/>

    <!--
        Asset History
     -->

    <record model="ir.ui.view" id="view_account_asset_history_form">
        <field name="name">account.asset.history.form</field>
        <field name="model">account.asset.history</field>
        <field name="arch" type="xml">
            <form string="Asset History">
                <group>
                    <group>
                        <field name="name"/>
                        <field name="date"/>
                    </group>
                    <group>
                        <field name="method_time"/>
                        <field name="method_number" attrs="{'invisible':[('method_time','=','end')]}"/>
                        <field name="method_period"/>
                        <field name="method_end" attrs="{'invisible':[('method_time','=','number')]}"/>
                    </group>
                </group>
                <separator string="Notes"/>
                <field name="note"/>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_account_asset_history_tree">
        <field name="name">account.asset.history.tree</field>
        <field name="model">account.asset.history</field>
        <field name="arch" type="xml">
            <tree string="Asset history">
                <field name="date"/>
                <field name="name"/>
                <field name="user_id"/>
                <field name="method_time"/>
                <field name="method_number"/>
                <field name="method_period"/>
                <field name="method_end"/>
            </tree>
        </field>
    </record>

</data>
</openerp>
