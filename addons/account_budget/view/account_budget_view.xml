<?xml version="1.0" ?>
<openerp>
    <data>

        <menuitem name="Budgets" id="menu_action_account_budget_post_tree" parent="account.menu_finance_generic_reporting" sequence="6"/>
        <menuitem id="next_id_31" name="Budgets" parent="account.menu_finance" sequence="6"/>
        <menuitem id="next_id_pos" name="Budgets" parent="account.menu_finance_configuration" sequence="50"/>
        <!--
    Budgets
    -->
        <record id="view_budget_struct_tree" model="ir.ui.view">
            <field name="name">account.budget.struct.tree</field>
            <field name="model">account.budget.struct</field>
            <field name="arch" type="xml">
                <tree string="Budgetary Struct" colors="blue:type=='view'">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="parent_id"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_budget_struct_form">
            <field name="name">account.budget.struct.form</field>
            <field name="model">account.budget.struct</field>
            <field name="arch" type="xml">
                <form string="Budgetary Struct">
                    <group col="4">
                        <field name="name"/>
                        <field name="code"/>
                        <field name="type"/>
                        <field name="parent_id"/>
                    </group>
                    <separator string="Budgetary Lines"/>
                    <field name="line_ids"/>
                </form>
            </field>
        </record>

        <record id="view_budget_struct_search" model="ir.ui.view">
            <field name="name">account.budget.struct.search</field>
            <field name="model">account.budget.struct</field>
            <field name="arch" type="xml">
                <search string="Budgetary Struct">
                    <field name="name" filter_domain="['|', ('name','ilike',self), ('code','ilike',self)]" string="Position Type"/>
                    <group expand="0" string="Group By">
                        <filter string="Financial Report" context="{'group_by':'financial_report_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="open_budget_struct" model="ir.actions.act_window">
            <field name="name">Positions Type</field>
            <field name="res_model">account.budget.struct</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="Budget Struct" action="open_budget_struct" id="menu_budget_struct" parent="next_id_pos" sequence="10"/>

        <record id="view_budget_post_tree" model="ir.ui.view">
            <field name="name">account.budget.post.tree</field>
            <field name="model">account.budget.post</field>
            <field name="arch" type="xml">
                <tree string="Budgetary Position">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="company_id" widget="selection" groups="base.group_multi_company"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_budget_post_form">
            <field name="name">account.budget.post.form</field>
            <field name="model">account.budget.post</field>
            <field name="arch" type="xml">
                <form string="Budgetary Position">
                    <group col="4">
                        <field name="name"/>
                        <field name="code"/>
                        <field name="company_id"  groups="base.group_multi_company" widget="selection"/>
                    </group>
                    <notebook>
                        <page string="Accounts">
                            <field name="account_ids"/>
                        </page>
                        <page string="Budget Lines">
                            <field name="crossovered_budget_line" widget="one2many_list" mode="tree">
                                <tree string="Budget Lines"  editable="top">
                                    <field name="crossovered_budget_id"/>
                                    <field name="analytic_account_id" groups="analytic.group_analytic_accounting"/>
                                    <field name="date_from"/>
                                    <field name="date_to"/>
                                    <field name="paid_date"/>
                                    <field name="planned_amount" sum="Planned Amount"/>
                                    <field name="practical_amount" sum="Practical Amount" />
                                    <field name="theoritical_amount" sum="Theoretical Amount"/>
                                    <field name="percentage"/>
                                </tree>
                                <form string="Budget Lines">
                                    <group col="4">
                                        <field name="crossovered_budget_id"/>
                                        <field name="analytic_account_id" groups="analytic.group_analytic_accounting"/>
                                        <field name="date_from"/>
                                        <field name="date_to"/>
                                        <field name="paid_date"/>
                                        <field name="planned_amount"/>
                                        <field name="practical_amount"/>
                                        <field name="theoritical_amount"/>
                                        <field name="percentage"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </form>
            </field>
        </record>

        <record id="view_budget_post_search" model="ir.ui.view">
            <field name="name">account.budget.post.search</field>
            <field name="model">account.budget.post</field>
            <field name="arch" type="xml">
                <search string="Budgetary Position">
                    <field name="name" filter_domain="['|', ('name','ilike',self), ('code','ilike',self)]" string="Budgetary Position"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                </search>
            </field>
        </record>

        <record id="open_budget_post_form" model="ir.actions.act_window">
            <field name="name">Budgetary Positions</field>
            <field name="res_model">account.budget.post</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem action="open_budget_post_form" id="menu_budget_post_form" parent="next_id_pos" sequence="20"/>


        <record model="ir.ui.view" id="main_budget_view_form">
            <field name="name">budget.budget.view.form</field>
            <field name="model">budget.budget</field>
            <field name="arch" type="xml">
                <form string="Budget">
                    <sheet string="Budget">
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="code"/>
                            </group>
                            <group>
                                <field name="type"/>
                            </group>
                        </group>
                        <separator name="Budgets"/>
                        <field name="budget_ids"/>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="main_budget_view_tree">
            <field name="name">budget.budget.view.tree</field>
            <field name="model">budget.budget</field>
            <field name="arch" type="xml">
               <tree colors="blue:type=='view'" string="Main Budget">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="type"/>
                </tree>
            </field>
        </record>

        <record id="view_main_budget_search" model="ir.ui.view">
           <field name="name">main.budget.search</field>
           <field name="model">budget.budget</field>
           <field name="arch" type="xml">
               <search string="Budget">
                    <field name="name" filter_domain="['|', ('name','ilike',self), ('code','ilike',self)]" string="Budget"/>
                    <filter string="Control" icon="terp-document-new" domain="[('type','=','control')]" help="Control Main Budgets"/>
                   <group expand="0" string="Group By">
                        <filter string="Type" context="{'group_by':'type'}"/>
                   </group>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_main_budget_view">
            <field name="name">Main Budgets</field>
            <field name="res_model">budget.budget</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to create a new main budget.
              </p>
            </field>
        </record>
        <menuitem parent="next_id_31" name="Main Budget"
            id="menu_act_main_budget_view"
            action="act_main_budget_view" sequence="10" />

        <record model="ir.ui.view" id="crossovered_budget_view_form">
            <field name="name">crossovered.budget.view.form</field>
            <field name="model">crossovered.budget</field>
            <field name="arch" type="xml">
                <form string="Budget">
                    <header>
                        <button string="Confirm" name="confirm" states="draft" type="workflow" class="oe_highlight"/>
                        <button string="Approve" name="validate" states="confirm" type="workflow" class="oe_highlight"/>
                        <button string="Done" name="done" states="validate" type="workflow" class="oe_highlight"/>
                        <button name="draft" states="cancel" string="Reset to Draft" type="workflow" />
                        <button string="Cancel Budget" name="cancel" states="confirm,validate" type="workflow"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm"/>
                    </header>
                    <sheet string="Budget">
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" attrs="{'readonly':[('state','!=','draft')]}"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="budget_id"/>
                                <field name="creating_user_id" attrs="{'readonly':[('state','!=','draft')]}" context="{'default_groups_ref': ['base.group_user', 'base.group_partner_manager', 'account.group_account_user']}"/>
                                <field name="validating_user_id" readonly="True" attrs="{'readonly':[('state','!=','draft')]}"/>
                            </group>
                            <group>
                                <field name="code" attrs="{'readonly':[('state','!=','draft')]}"/>
                                <label for="date_from" string="Duration"/>
                                <div>
                                    <field name="date_from" class="oe_inline" attrs="{'readonly':[('state','!=','draft')]}"/> - 
                                    <field name="date_to" class="oe_inline" attrs="{'readonly':[('state','!=','draft')]}" nolabel="1"/>
                                    <button name="line_update_date" type="object" string="(update)" class="oe_link oe_edit_only oe_inline" help="Update the dates of all lines"/>
                                </div>
                                <field name="company_id" groups="base.group_multi_company" widget="selection"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Budget Lines">
                                <field name="crossovered_budget_line" colspan="4" nolabel="1" attrs="{'readonly':[('state','!=','draft')]}"
                                context="{'default_date_from':date_from,'default_date_to':date_to}">
                                    <tree string="Budget Lines">
                                        <field name="sequence" invisible="1"/>
                                        <field name="analytic_account_id" groups="analytic.group_analytic_accounting"/>
                                        <field name="general_budget_id"/>
                                        <field name="name"/>
                                        <field name="paid_date"/>
                                        <field name="planned_amount" sum="Planned Amount"/>
                                        <field name="practical_amount" sum="Practical Amount"/>
                                        <field name="theoritical_amount" sum="Theoretical Amount"/>
                                        <field name="percentage"/>
                                        <field name="available_amount" sum="Available Amount"/>
                                    </tree>
                                    <form string="Budget Lines">
                                        <group>
                                            <group>
                                                <field name="analytic_account_id" groups="analytic.group_analytic_accounting"/>
                                                <field name="general_budget_id"/>
                                                <field name="name"/>
                                                <field name="planned_amount"/>
                                                <field name="position_restrict"/>
                                                <field name="coefficient"/>
                                            </group>
                                            <group>
                                                <label for="date_from" string="Duration"/>
                                                <div>
                                                    <field name="date_from" class="oe_inline"/> - 
                                                    <field name="date_to" class="oe_inline"/>
                                                </div>
                                                <field name="paid_date"/>
                                                <field name="sequence"/>
                                                <field name="company_id" widget="selection" groups="base.group_multi_company"/>
                                            </group>
                                        </group>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="crossovered_budget_view_tree">
            <field name="name">crossovered.budget.view.tree</field>
            <field name="model">crossovered.budget</field>
            <field name="arch" type="xml">
               <tree colors="blue:state == 'draft';gray:state in ('done','cancel');black:state in ('confirm','validate')" string="Budget">
                    <field name="budget_id" invisible="1"/>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="company_id" widget="selection" groups="base.group_multi_company"/>
                    <field name="creating_user_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="view_crossovered_budget_search" model="ir.ui.view">
           <field name="name">crossovered.budget.search</field>
           <field name="model">crossovered.budget</field>
           <field name="arch" type="xml">
               <search string="Budget">
                    <field name="name" filter_domain="['|', ('name','ilike',self), ('code','ilike',self)]" string="Budget"/>
                   <field name="budget_id"/>
                   <field name="date_from"/>
                    <field name="date_to"/>
                   <filter string="Control" icon="terp-document-new" domain="[('budget_id.type','=','control')]" help="Control Budgets"/>
                   <filter string="View" icon="terp-document-new" domain="[('budget_id.type','=','view')]" help="View Budgets"/>
                   <separator/>
                    <filter string="Draft" icon="terp-document-new" domain="[('state','=','draft')]" help="Draft Budgets"/>
                    <filter string="To Approve" icon="terp-camera_test" domain="[('state','=','confirm')]" help="To Approve Budgets" />
                    <group expand="0" string="Group By">
                        <filter string="Main Budget" context="{'group_by':'budget_id'}"/>
                        <filter string="State" context="{'group_by':'state'}"/>
                        <separator/>
                        <filter string="Start Month" context="{'group_by':'date_from'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_crossovered_budget_view">
            <field name="name">Budgets</field>
            <field name="res_model">crossovered.budget</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to create a new budget.
              </p><p>
                A budget is a forecast of your company's income and/or expenses
                expected for a period in the future. A budget is defined on some
                financial accounts and/or analytic accounts (that may represent
                projects, departments, categories of products, etc.)
              </p><p>
                By keeping track of where your money goes, you may be less
                likely to overspend, and more likely to meet your financial
                goals. Forecast a budget by detailing the expected revenue per
                analytic account and monitor its evolution based on the actuals
                realised during that period.
              </p>
            </field>
        </record>
        <menuitem parent="next_id_31"
            id="menu_act_crossovered_budget_view"
            action="act_crossovered_budget_view" sequence="20" />


        <record model="ir.ui.view" id="view_crossovered_budget_line_tree">
            <field name="name">crossovered.budget.line.tree</field>
            <field name="model">crossovered.budget.lines</field>
            <field name="arch" type="xml">
                <tree string="Budget Lines">
                    <field name="analytic_account_id" groups="analytic.group_analytic_accounting"/>
                    <field name="crossovered_budget_id" invisible="1"/>
                    <field name="main_budget_id" invisible="1"/>
                    <field name="main_budget_type" invisible="1"/>
                    <field name="struct_budget_id"/>
                    <field name="general_budget_id"/>
                    <field name="name"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="paid_date"/>
                    <field name="planned_amount"/>
                    <field name="practical_amount"/>
                    <field name="theoritical_amount"/>
                    <field name="percentage"/>
                    <field name="available_amount"/>

                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="view_crossovered_budget_line_form">
            <field name="name">crossovered.budget.line.form</field>
            <field name="model">crossovered.budget.lines</field>
            <field name="arch" type="xml">
                <form string="Budget Lines">
                    <sheet>
                        <group col="4">
                            <field name="main_budget_id"/>
                            <field name="crossovered_budget_id"/>
                            <field name="analytic_account_id"/>
                            <field name="general_budget_id"/>
                            <field name="struct_budget_id"/>
                            <field name="name"/>
                            <field name="date_from"/>
                            <field name="date_to"/>
                            <field name="paid_date"/>
                            <field name="planned_amount"/>
                            <field name="practical_amount"/>
                            <field name="theoritical_amount"/>
                            <field name="percentage"/>
                            <field name="available_amount"/>
                            <field name="state"/>
                            <field name="company_id" widget="selection" groups="base.group_multi_company"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="view_crossovered_budget_line_graph">
            <field name="name">crossovered.budget.line.graph</field>
            <field name="model">crossovered.budget.lines</field>
            <field name="arch" type="xml">
                <graph string="Budget Lines Graph" type="bar">
                    <field name="crossovered_budget_id"/>
                    <field name="planned_amount" operator="+"/>
                    <field name="practical_amount" operator="+"/>
                </graph>
            </field>
        </record>

        <record id="view_crossovered_budget_line_search" model="ir.ui.view">
            <field name="name">account.budget.line.search</field>
            <field name="model">crossovered.budget.lines</field>
            <field name="arch" type="xml">
                <search string="Budget Lines">
                    <field name="name" filter_domain="['|','|','|',(name,'ilike',self),('crossovered_budget_id.name','ilike',self),('crossovered_budget_id.code','ilike',self),('main_budget_id.name','ilike',self)]"/>
                    <separator/>
                    <filter string="Control" icon="terp-document-new" domain="[('main_budget_type','=','control')]" help="Control Budgets"/>
                   <filter string="View" icon="terp-document-new" domain="[('main_budget_type','=','view')]" help="View Budgets"/>
                   <separator/>
                    <filter string="Amount" icon="terp-document-new" domain="[('value_type','=','amount')]" help="Amount Values"/>
                   <filter string="Quantity" icon="terp-document-new" domain="[('value_type','=','quantity')]" help="Quantities Values"/>
                   <separator/>
                    <filter name="draft" string="Draft" domain="[('state','=','draft')]" help="Draft"/>
                    <filter name="confirm" string="Confirm" domain="[('state','=','confirm')]" help="Confirm"/>
                    <filter name="validate" string="Validate" domain="[('state','=','validate')]" help="Validate"/>
                    <separator/>
                    <field name="main_budget_id"/>
                    <field name="crossovered_budget_id"/>
                    <field name="analytic_account_id"/>
                    <field name="general_budget_id"/>
                    <field name="struct_budget_id"/>
                    <group expand="0" string="Group By">
                        <filter string="Main Budget" context="{'group_by':'main_budget_id'}"/>
                        <filter string="Budget" context="{'group_by':'crossovered_budget_id'}"/>
                        <filter string="Analytic Account" context="{'group_by':'analytic_account_id'}"/>
                        <filter string="Struct Budget" context="{'group_by':'struct_budget_id'}"/>
                        <filter string="Position Budget" context="{'group_by':'general_budget_id'}"/>
                        <separator/>
                        <filter string="State" context="{'group_by':'state'}"/>
                        <filter string="Value Type" context="{'group_by':'value_type'}"/>
                        <separator/>
                        <filter string="Start Month" context="{'group_by':'date_from'}"/>
                        <filter string="Month Paid" context="{'group_by':'paid_date'}"/>
                    </group>


                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_crossovered_budget_lines_view">
            <field name="name">Budget Lines</field>
            <field name="res_model">crossovered.budget.lines</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,graph</field>
            <field name="view_id" ref="view_crossovered_budget_line_tree"/>
        </record>

        <menuitem name="Budget Lines" parent="next_id_31"
            id="menu_act_crossovered_budget_lines_view"
            action="act_crossovered_budget_lines_view" sequence="30"/>

    </data>
</openerp>


